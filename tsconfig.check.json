{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src", "/*.js", "/*.ts", "tests/unit", "scripts"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "examples",
    "ideas",
    "res",
    "legacy",
    "tests/e2e",
    "**/e2e/**",
    "docs"
  ]
}

{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    // Best practices
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    // Performance
    "skipLibCheck": true, // recommended
    // Aliases
    "baseUrl": "./",
    "declaration": true,
    //
    "esModuleInterop": true, // default: true iff module is "Node16" or "NodeNext"
    "exactOptionalPropertyTypes": true, // recommended
    "forceConsistentCasingInFileNames": true, // recommended
    "importHelpers": true,
    "lib": ["ESNext"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    // Basic settings
    "rootDir": ".",
    // Type-checking
    "strict": true,
    "strictNullChecks": true,
    // Versions and APIs
    "target": "ES2018",
    //
    "noEmit": true
  },
  "exclude": [
    "coverage",
    "dist",
    "external",
    "node_modules",
    "static",
    "tmp",
    "**/e2e/**"
  ],
  "include": [
    "*.config.js",
    "eslint.config.js",
    "*.config.ts",
    "packages/*/*.config.ts",
    "packages/*/src",
    "packages/*/tests",
    "**/scripts"
  ]
}

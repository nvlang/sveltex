{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    // Best practices
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    // Performance
    // "skipLibCheck": true, // recommended
    // Aliases
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true, // default: true iff module is "Node16" or "NodeNext"
    "exactOptionalPropertyTypes": true, // recommended
    "forceConsistentCasingInFileNames": true, // recommended
    "importHelpers": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "paths": {
      "$config": ["src/config/index.ts"],
      "$config/*": ["src/config/*"],
      "$handlers": ["src/handlers/index.ts"],
      "$handlers/*": ["src/handlers/*"],
      "$sveltex-preprocess": ["src/index.ts"],
      "$tests": ["tests/index.ts"],
      "$tests/*": ["tests/*"],
      "$type-guards": ["src/type-guards/index.ts"],
      "$type-guards/*": ["src/type-guards/*"],
      "$types": ["src/types/index.ts"],
      "$types/*": ["src/types/*"],
      "$types/utils": ["src/types/utils/index.ts"],
      "$types/utils/*": ["src/types/utils/*"],
      "$utils": ["src/utils/index.ts"],
      "$utils/*": ["src/utils/*"]
    },
    // "types": ["sveltex-preprocess"]
    "resolveJsonModule": true,
    // Basic settings
    "rootDir": ".",
    // Debugging
    "sourceMap": true,
    // Type-checking
    "strict": true,
    // Versions and APIs
    "target": "ESNext"
  },
  "exclude": [
    "coverage",
    "dist",
    "e2e",
    "examples",
    "external",
    "ideas",
    "node_modules",
    "static",
    "tmp"
  ],
  // "ts-node": {
  //   // "swc": true
  // },
  "include": ["*.config.js", "*.config.ts", "package.json", "src", "tests"]
}

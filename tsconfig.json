{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    // Best practices
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    // Performance
    "skipLibCheck": true, // recommended
    // Aliases
    "baseUrl": "./",
    "declaration": true,
    //
    "esModuleInterop": true, // default: true iff module is "Node16" or "NodeNext"
    "exactOptionalPropertyTypes": true, // recommended
    "forceConsistentCasingInFileNames": true, // recommended
    "importHelpers": true,
    "lib": ["ESNext"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "paths": {
      "$*": ["src/*"],
      "$tests/*": ["tests/*"]
    },
    "resolveJsonModule": true,
    // Basic settings
    "rootDir": ".",
    // Type-checking
    "strict": true,
    "strictNullChecks": true,
    // Versions and APIs
    "target": "ES2018"
  },
  "exclude": [
    "coverage",
    "dist",
    "e2e-old",
    "examples",
    "external",
    "ideas",
    "legacy",
    "node_modules",
    "static",
    "tmp",
    "**/e2e/**"
  ],
  "include": ["*.config.js", "*.config.ts", "src", "tests", "scripts"]
}

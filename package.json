{
  "name": "@nvl/sveltex-monorepo",
  "private": true,
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "clean": "pnpm --recursive clean",
    "build": "pnpm --recursive build",
    "lint": "eslint . && tsc -p tsconfig.json",
    "test": "pnpm --recursive test",
    "format": "prettier --write .",
    "ci:version": "changeset version && pnpm exec tsx scripts/update-jsr-versions.ts && pnpm install --no-frozen-lockfile && pnpm run format",
    "ci:publish": "pnpm --recursive publish --provenance --access public --no-git-checks && pnpm --recursive exec deno publish --unstable-sloppy-imports --allow-dirty && changeset tag"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/types": "^19.8.0",
    "@eslint/js": "^9.24.0",
    "@types/node": "^22.14.1",
    "commitlint": "^19.8.0",
    "deno": "^2.2.9",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-vitest": "^0.5.4",
    "glob": "^11.0.1",
    "husky": "^9.1.7",
    "knip": "^5.50.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  }
}

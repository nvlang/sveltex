{
  "name": "sveltex",
  "version": "0.0.1",
  "description": "MDX-like Svelte preprocessor with extensive TeX support.",
  "type": "module",
  "author": "N. V. Lang <npm@nvlang.dev>",
  "license": "MIT",
  "packageManager": "pnpm@8.14.1",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "start": "node dist/src/main.js",
    "clean": "rimraf coverage dist tmp",
    "prebuild": "pnpm run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "pnpm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint .",
    "test": "vitest run --coverage --watch --",
    "format": "prettier --write .",
    "test:watch": "jest --watch",
    "prepare": "husky"
  },
  "devDependencies": {
    "@ampproject/remapping": "^2.3.0",
    "@commitlint/config-conventional": "^19.0.3",
    "@commitlint/types": "^19.0.3",
    "@types/diff": "^5.0.9",
    "@types/dompurify": "^3.0.5",
    "@types/estree": "^1.0.5",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.25",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitest/coverage-v8": "^1.3.1",
    "commitlint": "^19.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "svelte": "5.0.0-next.73",
    "ts-essentials": "^9.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.4.2",
    "typescript-eslint": "^7.1.1",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cosmiconfig": "^9.0.0",
    "diff": "^5.2.0",
    "dompurify": "^3.0.9",
    "find-cache-dir": "^5.0.0",
    "jsdom": "^24.0.0",
    "magic-string": "^0.30.8",
    "marked": "^12.0.1",
    "svelte-preprocess": "^5.1.3",
    "ts-deepmerge": "^7.0.0",
    "tslib": "^2.6.2",
    "uuid": "^9.0.1",
    "yaml": "^2.4.1"
  }
}
